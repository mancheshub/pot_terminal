<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Lineup">

  <Button
    android:id="@+id/btn_menu01"
    android:layout_width="90dp"
    android:layout_height="75dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="3dp"
    android:width="150px"
    android:height="150px"
    android:focusableInTouchMode="false"
    android:text="① 商品照合"
    android:textSize="12sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/btn_menu02"
    android:layout_width="90dp"
    android:layout_height="75dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="5dp"
    android:width="150px"
    android:height="150px"
    android:focusableInTouchMode="false"
    android:text="② 商品入庫"
    android:textSize="12sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_menu01" />

  <Button
    android:id="@+id/btn_menu03"
    android:layout_width="90dp"
    android:layout_height="75dp"
    android:layout_marginStart="16dp"
    android:width="150px"
    android:height="150px"
    android:focusableInTouchMode="false"
    android:text="③ 商品出庫"
    android:textSize="12sp"
    app:layout_constraintStart_toEndOf="@+id/btn_menu02"
    app:layout_constraintTop_toTopOf="@+id/btn_menu02" />

  <Button
    android:id="@+id/btn_menu04"
    android:layout_width="90dp"
    android:layout_height="75dp"
    android:layout_marginStart="16dp"
    android:width="150px"
    android:height="150px"
    android:focusableInTouchMode="false"
    android:text="④ 商品移動"
    android:textSize="12sp"
    app:layout_constraintStart_toEndOf="@+id/btn_menu03"
    app:layout_constraintTop_toTopOf="@+id/btn_menu02" />

  <Button
    android:id="@+id/btn_menu05"
    android:layout_width="90dp"
    android:layout_height="75dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="5dp"
    android:width="150px"
    android:height="150px"
    android:focusableInTouchMode="false"
    android:text="⑤ 入物移動"
    android:textSize="12sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_menu02" />

  <Button
    android:id="@+id/btn_menu06"
    android:layout_width="90dp"
    android:layout_height="75dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="5dp"
    android:width="150px"
    android:height="150px"
    android:focusableInTouchMode="false"
    android:text="⑥ データ確認"
    android:textSize="12sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_menu05" />

  <Button
    android:id="@+id/btn_menu07"
    android:layout_width="90dp"
    android:layout_height="75dp"
    android:layout_marginStart="16dp"
    android:width="150px"
    android:height="150px"
    android:focusableInTouchMode="false"
    android:text="⑦ データ転送"
    android:textSize="12sp"
    app:layout_constraintStart_toEndOf="@+id/btn_menu06"
    app:layout_constraintTop_toTopOf="@+id/btn_menu06" />

  <Button
    android:id="@+id/btn_menu08"
    android:layout_width="90dp"
    android:layout_height="75dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="5dp"
    android:width="150px"
    android:height="150px"
    android:focusableInTouchMode="false"
    android:text="⑧ 棚卸し"
    android:textSize="12sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_menu06" />

</androidx.constraintlayout.widget.ConstraintLayout>
