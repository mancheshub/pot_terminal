<?xml version="1.0" encoding="utf-8"?>

<layout
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
    <variable name="viewmodel" type="com.bigsize.pot_terminal.viewmodel.ShelfReplaceB" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShelfSReplace">

    <ImageView
      android:id="@+id/btn_shelves01"
      android:layout_width="25sp"
      android:layout_height="25sp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="7dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/baseline_shelves_24" />

    <TextView
      android:id="@+id/lbl_location01"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:gravity="left|center_vertical"
      android:text="出棚"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toStartOf="@+id/txt_location01"
      app:layout_constraintStart_toEndOf="@+id/btn_shelves01"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/txt_location01"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_marginEnd="16dp"
      android:ems="10"
      android:gravity="left|center_vertical"
      android:text="@={viewmodel.txtLocation01}"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/guideline01"
      app:layout_constraintTop_toTopOf="parent" />

    <ImageView
      android:id="@+id/btn_shelves02"
      android:layout_width="25sp"
      android:layout_height="25sp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="39dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn_shelves01"
      app:srcCompat="@drawable/baseline_shelves_24" />

    <TextView
      android:id="@+id/lbl_box"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="24dp"
      android:layout_marginEnd="8dp"
      android:gravity="left|center_vertical"
      android:text="入物"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toStartOf="@+id/txt_location01"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/btn_shelves01"
      app:layout_constraintTop_toBottomOf="@+id/lbl_location01" />

    <TextView
      android:id="@+id/txt_location02"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_marginTop="24dp"
      android:layout_marginEnd="16dp"
      android:ems="10"
      android:gravity="left|center_vertical"
      android:text="@={viewmodel.txtBox}"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/guideline01"
      app:layout_constraintTop_toBottomOf="@+id/txt_location01" />

    <ImageView
      android:id="@+id/btn_clothes"
      android:layout_width="25sp"
      android:layout_height="25sp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="39dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn_shelves02"
      app:srcCompat="@drawable/baseline_clothes_24" />

    <TextView
      android:id="@+id/lbl_location02"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="24dp"
      android:layout_marginEnd="8dp"
      android:gravity="left|center_vertical"
      android:text="入棚"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toStartOf="@+id/txt_item"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/btn_clothes"
      app:layout_constraintTop_toBottomOf="@+id/lbl_box" />

    <TextView
      android:id="@+id/txt_item"
      android:layout_width="0dp"
      android:layout_height="40dp"
      android:layout_marginTop="24dp"
      android:layout_marginEnd="16dp"
      android:ems="10"
      android:gravity="left|center_vertical"
      android:text="@={viewmodel.txtLocation02}"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/guideline01"
      app:layout_constraintTop_toBottomOf="@+id/txt_location02" />

    <Button
      android:id="@+id/exe_button01"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="16dp"
      android:text="出場読"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/exe_button02"
      app:layout_constraintStart_toStartOf="parent" />

    <Button
      android:id="@+id/exe_button02"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="16dp"
      android:text="入物読"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/exe_button03"
      app:layout_constraintStart_toEndOf="@+id/exe_button01" />

    <Button
      android:id="@+id/exe_button03"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:text="入場読"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/exe_button02" />

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline01"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_begin="102dp" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
